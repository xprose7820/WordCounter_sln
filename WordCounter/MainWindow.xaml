<Window x:Class="WordCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordCounter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Browse..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="BrowseButton_Click"/>
        <TextBox x:Name="FileContentTextBox" Margin="10,45,10,45" TextWrapping="Wrap" IsReadOnly="True"/>
        <ComboBox x:Name="WordComboBox" HorizontalAlignment="Left" Margin="10,0,10,10" VerticalAlignment="Bottom" Width="200" SelectionChanged="WordComboBox_SelectionChanged"/>
         <Label x:Name="WordCountLabel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="200"/>
        
    </Grid>
</Window>
